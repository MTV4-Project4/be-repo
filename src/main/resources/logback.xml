<configuration>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} [traceId=%X{traceId:-}] %-5level %logger{36} - %msg%n</pattern>-->
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} %replace([traceId=%X{traceId}]){\[traceId=\]} %-5level %logger{36} - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{traceId:-}] %-5level %logger{36} - %msg%n</pattern>

        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="consoleAppender"/>
    </root>
</configuration>